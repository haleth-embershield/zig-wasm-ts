{
  "name": "tower-def-geometry",
  "version": "0.1.0",
  "type": "module",
  "description": "Neon Geometry Tower Defense - WebAssembly game with TypeScript frontend",
  "scripts": {
    "build": "bun build web/src/main.ts --outdir dist/js",
    "check": "tsc --noEmit",
    "lint": "eslint web/src/**/*.ts",
    "format": "prettier --write web/src/**/*.ts",
    "start": "zig build run",
    "dev": "bun --hot run dev-server.js"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3",
    "@types/web": "^0.0.135"
  }
} 